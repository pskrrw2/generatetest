@using Domain.Common.Enums
@using Domain.Entities
@using System.Globalization
@using static UI.Areas.Executive.Pages.CreateRequestModel
@using Domain.Common.Const
@model RequestModel
@{
    var datetime = Model.CreatedDate?.ToString(" MMM dd, yyyy", CultureInfo.InvariantCulture);
}

<form class="needs-validation" novalidate method="post" asp-area="Executive" asp-page="/CreateRequest">
    <input type="hidden" asp-for="Status" value="Rejected">
    <input type="hidden" asp-for="CreatedDate">
    <input type="hidden" asp-for="AppliedTickets">
    <input type="hidden" asp-for="AppliedSROTicket">
    <input type="hidden" asp-for="AppliedParkingPasses">
    <input type="hidden" asp-for="RequestId">
    <input type="hidden" asp-for="SROTickets">
    <input type="hidden" asp-for="CateringAndDrinks">
    <input type="hidden" asp-for="EventId">
    <input type="hidden" asp-for="ExecutiveId">
    <input type="hidden" asp-for="ExecutiveNotes">
    <input type="hidden" asp-for="action" value="reject">
    <div class="row g-6">
        <div class="col-md-12">
            <label for="rejectmodal-event" class="form-label">Requested For</label>
            <input asp-for="EventName" class="form-control" type="text" disabled />
        </div>
        <div class="col-md-6">
            <label for="rejectmodal-requestedby" class="form-label">Requested By</label>
            <input asp-for="ExecutiveName" class="form-control" type="text" disabled />
        </div>
        <div class="col-md-6">
            <label for="rejectmodal-requestedon" class="form-label">Requested On</label>
            <input id="approvemodal-requestedon" class="form-control" type="text" value="@datetime" disabled />
        </div>
        <div class="col-md-6">
            <label for="rejectmodal-appliedeventtickets" class="form-label">Requested Events Tickets</label>
            <input asp-for="AppliedTickets" class="form-control" type="text" disabled />
        </div>
        <div class="col-md-6">
            <label for="rejectmodal-appliedparkingtickets" class="form-label">Requested Parking Passes</label>
            <input asp-for="AppliedParkingPasses" class="form-control" type="text" disabled />
        </div>
        @if (Model.SROTickets == SROType.Yes)
        {
            <div class="col-md-6">
                <label for="rejectmodal-appliedsrotickets" class="form-label">Requested SRO Tickets</label>
                <input asp-for="AppliedSROTicket" class="form-control" type="text" disabled />
            </div>
        }
        <div class="col-12">
            <div class="form-floating form-floating-outline">
                <textarea class="form-control" asp-for="AdminNotes" rows="2" placeholder="Reason for Rejection" style="height: 60px;" required></textarea>
                <label for="rejectmodal-reason">Rejection Reason</label>
            </div>
        </div>
        <div class="pt-6" style="display:flex; justify-content:center;">
            <button type="submit" class="btn btn-primary me-4">Reject</button>
            <button type="reset" class="btn btn-outline-secondary" data-bs-dismiss="modal" aria-label="Close"> Cancel</button>
        </div>
    </div>
</form>