    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // List of table IDs to check
            var tableIds = ['adminDatatable', 'matchEventTable', 'executiveDashboardTable'];
            var tableFound = false; // Flag to track if any table is found

            // Loop through the list of table IDs and check if any exist
            tableIds.forEach(function (id) {
                var table = document.getElementById(id);
                if (table) {
                    tableFound = true;
                }
            });

            // If any table is found, show the 'ticket-display-legend' div
            if (tableFound) {
                var legendDiv = document.getElementById('ticket-display-legend');
                if (legendDiv) {
                    legendDiv.style.display = 'block'; // Show the div if any table exists
                }
            }

            // Close button functionality to hide the toast
            var closeButton = document.getElementById('close-toast-btn');
            if (closeButton) {
                closeButton.addEventListener('click', function () {
                    var toast = document.getElementById('ticket-display-legend');
                    if (toast) {
                        toast.style.display = 'none'; // Hide the toast when the close button is clicked
                    }
                });
            }
        });
    </script>
</body>
