        @using Domain.Identity;
        @using Microsoft.AspNetCore.Identity;
        @using Domain.Common.Enum;

        @inject SignInManager<ApplicationUser> SignInManager

<!-- Menu -->
<aside id="layout-menu" class="layout-menu menu-vertical menu bg-menu-theme" style="border-right: 1px solid var(--bs-border-color);">

    @* <partial name="~/Areas/Shared/_LogoPartial.cshtml" /> *@

    <div class="menu-inner-shadow"></div>

    <ul class="menu-inner py-1">

        @if (SignInManager.IsSignedIn(User))
        {
            if (User.IsInRole(nameof(RoleType.Admin)))
            {
                <!-- Dashboard -->
                <li class="menu-item">
                    <a href="/admin/dashboard" class="menu-link">
                        <i class="menu-icon tf-icons ri-home-smile-line"></i>
                        <div>Dashboard</div>
                    </a>
                </li>

                <!-- Management -->
                <li class="menu-header mt-5">
                    <span class="menu-header-text">Management</span>
                </li>

                <!-- Management Menu -->
                <li class="menu-item">
                    <a href="/admin/events" class="menu-link">
                        <i class="menu-icon tf-icons ri-calendar-2-line"></i>
                        <div>Manage Events</div>
                    </a>
                </li>
                <li class="menu-item">
                    <a href="/admin/manage-requests" class="menu-link">
                        <i class="menu-icon tf-icons ri-folders-line"></i>
                        <div>Manage Requests</div>
                    </a>
                </li>
                <li class="menu-item">
                    <a href="/conference-request" class="menu-link">
                        <i class="menu-icon tf-icons ri-function-line"></i>
                        <div>Manage Conference</div>
                    </a>
                </li>
                <li class="menu-item">
                    <a href="/admin/manage-executives" class="menu-link">
                        <i class="menu-icon tf-icons ri-group-line"></i>
                        <div>Manage Executives</div>
                    </a>
                </li>
                <li class="menu-item">
                    <a href="/account/invite" class="menu-link">
                        <i class="menu-icon tf-icons ri-user-line"></i>
                        <div>Invite Executive</div>
                    </a>
                </li>

                <!-- Add/Create -->
                <li class="menu-header mt-5">
                    <span class="menu-header-text"></span>
                </li>

                <li class="menu-item">
                    <a href="/admin/create-event" class="menu-link">
                        <i class="menu-icon tf-icons ri-calendar-2-line"></i>
                        <div>Add Events</div>
                    </a>
                </li>

                <!-- Reports -->
                <li class="menu-header mt-5">
                    <span class="menu-header-text">Reports</span>
                </li>

                <!-- Reports Menu -->
                <li class="menu-item">
                    <a href="javascript:void(0)" class="menu-link">
                        <i class="menu-icon tf-icons ri-file-chart-line"></i>
                        <div>Generate Reports</div>
                    </a>
                </li>
            }
            else if (User.IsInRole(nameof(RoleType.Executive)))
            {

                <!-- Apps & Pages -->

                <li class="menu-item">
                    <a href="/dashboard" class="menu-link">
                        <i class="menu-icon tf-icons ri-group-line"></i>
                        <div>Dashboards</div>
                    </a>
                </li>

                <li class="menu-item">
                    <a href="/explore-events" class="menu-link">
                        <i class="menu-icon tf-icons ri-calendar-event-line"></i>
                        <div>Explore Events</div>
                    </a>
                </li>

                <li class="menu-header mt-5">
                    <span class="menu-header-text">Requests</span>
                </li>

                <!-- Requests -->

                <li class="menu-item">
                    <a href="/my-requests" class="menu-link">
                        <i class="menu-icon tf-icons ri-function-line"></i>
                        <div>Event Requests</div>
                    </a>
                </li>
                <li class="menu-item">
                    <a href="/conference-request" class="menu-link">
                        <i class="menu-icon tf-icons ri-function-line"></i>
                        <div>Conference Requests</div>
                    </a>
                </li>
                <li class="menu-header mt-5">
                    <span class="menu-header-text">Queries</span>
                </li>
                <li class="menu-item">
                    <a href="/faq" class="menu-link">
                        <i class="menu-icon tf-icons ri-questionnaire-line"></i>
                        <div>FAQs</div>
                    </a>
                </li>
                <li class="menu-item">
                    <a href="/contact-us" class="menu-link">
                        <i class="menu-icon tf-icons ri-customer-service-line"></i>
                        <div>Contact Us</div>
                    </a>
                </li>
            }
        }
    </ul>
    <div class="bs-toast toast toast-placement-ex fade show bottom-10 start-20" role="alert" aria-live="assertive" aria-atomic="true" id="ticket-display-legend" style="display: none; background-color: var(--bs-toast-header-bg);">
        <div class="toast-header">
            <i class="ri-information-fill text-primary me-2"></i>
            <div class="me-auto fw-medium">Color Indications </div>
            <button type="button" class="btn-close" id="close-toast-btn" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body">
            <div class="d-flex align-items-center lh-1" style="margin-bottom: 8px;">
                <span class="badge badge-dot bg-secondary" style="width: 0.8rem; height: 0.8rem; margin-right: 8px;"></span> Requested Tickets
            </div>
            <div class="d-flex align-items-center lh-1">
                <span class="badge badge-dot bg-success" style="width: 0.8rem; height: 0.8rem; margin-right: 8px;"></span> Approved Tickets
            </div>
        </div>
    </div>

    @*  <!-- Image Slider --> *@
    @*  <div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner" id="carousel-inner"></div>
        </div> *@

</aside>

