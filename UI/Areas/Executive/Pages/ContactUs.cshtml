@page "/contact-us"
@model UI.Areas.Executive.Pages.ContactUsModel
@{
    Layout = Layouts.Default;
    ViewData["Title"] = "Contact Us";
}

<section id="landingContact" class="section-py bg-body landing-contact">
    <div class="container bg-icon-left position-relative">
        <h6 class="text-center d-flex justify-content-center align-items-center mb-6">
            <span class="text-uppercase">contact us</span>
        </h6>
        <p class="text-center fw-medium mb-4 mb-md-12 pb-3">Any question or remark? just write us a message</p>
        <div class="row gy-6">
            <div class="col-lg-5">
                <div class="card h-100">
                    <div class="bg-primary rounded-4 text-white card-body p-8">
                        <p class="fw-medium mb-1_5 tagline">Contact our Admins</p>
                        <h4 class="text-white mb-5 title">We know you can have queries, feel free to write to us.</h4>
                        <p class="mb-0 description">
                            If you have any query related to portal or events or anything else, write to us and we will get back to you in no time.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-lg-7">
                <div class="card">
                    <div class="card-body">
                        <h5 class="mb-6">Enter your query here</h5>
                        <form class="needs-validation" method="post" asp-area="Executive" asp-page="/ContactUs">
                            <div class="row g-5">
                                <div class="col-12">
                                    <div class="form-floating form-floating-outline">
                                        <textarea class="form-control h-px-250" asp-for="Input.Message" placeholder="Message" aria-label="Message" id="basic-default-message"></textarea>
                                        <label for="basic-default-message">Message</label>
                                    </div>
                                </div>

                            </div>
                            <button type="submit" class="btn btn-primary mt-5 waves-effect waves-light">Send inquiry</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
