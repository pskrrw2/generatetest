@model Domain.ViewModel.MailRequestVm

@{
    Layout = "EmailLayout.cshtml";
    var createOrUpdate = Model.Id != 0 ? "Updated" : "Created";
}

<span class="preheader">New Request for an Event</span>
<table role="presentation"
       border="0"
       cellpadding="0"
       cellspacing="0"
       class="main">
    <!-- START MAIN CONTENT AREA -->
    <tr>
        <td class="wrapper">
            <p>Hi Admin,</p>
            <p>
                One of the Executives have @createOrUpdate request for
                <b>(@Model.EventName)</b>. Please visit the
                portal in order to take action on the request.
            </p>
            <table role="presentation"
                   border="0"
                   cellpadding="0"
                   cellspacing="0"
                   class="main"
                   style="margin-top: 25px;">
                <tbody>
                    <tr>
                        <td style="padding: 10px">
                            <table role="presentation"
                                   border="0"
                                   cellpadding="0"
                                   cellspacing="0">
                                <tbody>
                                    <tr>
                                        <td>
                                            <strong>Requested By:</strong>
                                        </td>
                                        <td>@Model.ExecutiveName</td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <strong>Requested For:</strong>
                                        </td>
                                        <td>@Model.EventName</td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <strong>Event Date:</strong>
                                        </td>
                                        <td>@Model.EventDate</td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <strong>Tickets Requested:</strong>
                                        </td>
                                        <td>@Model.NumberOfTickets</td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <strong>SRO Tickets Requested:</strong>
                                        </td>
                                        <td>@Model.NumberOfSROTickets</td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <strong>Parking Passes:</strong>
                                        </td>
                                        <td>@Model.NumberOfParkingPasses</td>
                                    </tr>
                                </tbody>
                            </table>
                        </td>
                    </tr>
                </tbody>
            </table>
            <table role="presentation"
                   border="0"
                   cellpadding="0"
                   cellspacing="0"
                   class="btn btn-primary"
                   style="margin-top: 35px">
                <tbody>
                    <tr>
                        <td align="left">
                            <table role="presentation"
                                   border="0"
                                   cellpadding="0"
                                   cellspacing="0">
                                <tbody>
                                    <tr>
                                        <td>
                                            <a href="@Model.UrlPath" target="_blank">Go to portal</a>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </td>
                    </tr>
                </tbody>
            </table>
        </td>
    </tr>

    <!-- END MAIN CONTENT AREA -->
</table>