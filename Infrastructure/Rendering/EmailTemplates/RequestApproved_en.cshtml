@model Domain.ViewModel.MailRequestVm

@{
    Layout = "EmailLayout.cshtml";
}

<span class="preheader">Request Approved by Admin</span>
<table role="presentation"
       border="0"
       cellpadding="0"
       cellspacing="0"
       class="main">
    <!-- START MAIN CONTENT AREA -->
    <tr>
        <td class="wrapper">
            <p>Hi @Model.ExecutiveName,</p>
            <p>
                Your request for <b>@Model.EventName</b> has been approved by Admin. Please fill the request for your attendee details before final date <b>@Model.ExpiredDate</b>.
            </p>
            <table role="presentation"
                   border="0"
                   cellpadding="0"
                   cellspacing="0"
                   class="main"
                   style="margin-top: 25px;">
                <tbody>
                    <tr>
                        <td style="padding: 10px">
                            <table role="presentation"
                                   border="0"
                                   cellpadding="0"
                                   cellspacing="0">
                                <tbody>
                                    <tr>
                                        <td>
                                            <strong>Event Name:</strong>
                                        </td>
                                        <td>@Model.EventName</td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <strong>Event Date:</strong>
                                        </td>
                                        <td>@Model.EventDate</td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <strong>Event Tickets Approved:</strong>
                                        </td>
                                        <td>@Model.NumberOfTickets</td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <strong>SRO Tickets Approved:</strong>
                                        </td>
                                        <td>@Model.NumberOfSROTickets</td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <strong>Parking Passes Approved:</strong>
                                        </td>
                                        <td>@Model.NumberOfParkingPasses</td>
                                    </tr>
                                </tbody>
                            </table>
                        </td>
                    </tr>
                </tbody>
            </table>
            <p>
                <small>Note: The last date to fill catering and guest data is <b>@Model.ExpiredDate</b> and <b>@Model.ExpiredBeforeOneDay </b> respectively. Please fill the catering and guest data before due date.</small>
            </p>
            <table role="presentation"
                   border="0"
                   cellpadding="0"
                   cellspacing="0"
                   class="btn btn-primary"
                   style="margin-top: 35px">
                <tbody>
                    <tr>
                        <td align="left">
                            <table role="presentation"
                                   border="0"
                                   cellpadding="0"
                                   cellspacing="0">
                                <tbody>
                                    <tr>
                                        <td>
                                            <a href="@Model.UrlPath" target="_blank">Go to portal</a>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </td>
                    </tr>
                </tbody>
            </table>
        </td>
    </tr>

    <!-- END MAIN CONTENT AREA -->
</table>